<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/patitas_component"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIconoMascotas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_corazon"
            app:tint="@color/patitas_beige" />

        <TextView
            android:id="@+id/tvMascotasNombres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/patitas_text_color"
            android:textSize="28sp"
            tools:ignore="MissingPrefix"
            tools:text="Ejemplo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>